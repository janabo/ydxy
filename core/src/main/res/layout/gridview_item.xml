<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:layout_marginTop="15dip" android:background="@null">
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="?attr/image34"
        android:layout_height="?attr/image34"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dip"
        android:gravity="center"
        android:paddingBottom="15dip"
        android:text=""
        android:textColor="#212121"
        android:textSize="?attr/textSize12"/>
</LinearLayout>