<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	<item>
		<shape>
			<!-- 边框颜色 -->
			<solid android:color="#c9c9c9"/>
		</shape>
	</item>
	<!-- 给View的上 左 右设置8dp的边框 -->
	<item android:top="1dp" android:left="0dp" android:right="0dp" android:bottom="1dp" >
		<shape> <!-- View填充颜色 -->
			<solid android:color="#dd7e6b" />
			<padding
				android:bottom="10dp"
				android:left="10dp"
				android:right="10dp"
				android:top="10dp" />
		</shape>
	</item>
</layer-list>