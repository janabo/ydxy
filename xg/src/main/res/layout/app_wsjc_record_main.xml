<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4f4f4"
    android:id="@+id/mdialog">

    <include
        android:id="@+id/title_bar"
        layout="@layout/core_title_back"></include>

    <com.dk.mp.core.widget.ErrorLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/error_layout"
        android:gravity="center_horizontal"
        android:layout_below="@id/title_bar"/>

    <LinearLayout
        android:layout_below="@id/title_bar"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:layout_height="0.8dp"
                android:layout_width="match_parent"
                android:background="@color/linecolor"/>
            <android.support.v7.widget.RecyclerView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/ssq"/>
            <View
                android:layout_height="0.8dp"
                android:layout_width="match_parent"
                android:background="@color/linecolor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <View
                android:layout_height="0.8dp"
                android:layout_width="match_parent"
                android:background="@color/linecolor"/>
            <android.support.v7.widget.RecyclerView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/ssl"/>
            <View
                android:layout_height="0.8dp"
                android:layout_width="match_parent"
                android:background="@color/linecolor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <View
                android:layout_height="0.8dp"
                android:layout_width="match_parent"
                android:background="@color/linecolor"/>
            <android.support.v7.widget.RecyclerView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/lc"/>
            <View
                android:layout_height="0.8dp"
                android:layout_width="match_parent"
                android:background="@color/linecolor"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:scaleType="fitXY"
        android:src="@mipmap/search_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:backgroundTint="#4389fe"
        app:borderWidth="0.0dip"
        app:elevation="5.0dip"
        app:fabSize="normal"
        app:pressedTranslationZ="10.0dip"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:onClick="toSearch"
        app:rippleColor="#248901">
    </android.support.design.widget.FloatingActionButton>
</RelativeLayout>
