<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_search"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4f4f4"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_alignParentTop="true"
        android:background="#ededed"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:elevation="3dp">
        <TextView
            android:id="@+id/back"
            android:textColor="@color/colorPrimary"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip" />

        <TextView
            android:id="@+id/title"
            android:paddingLeft="70dip"
            android:paddingRight="70dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#212121"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ok"
            android:textColor="@color/colorPrimary"
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"/>
    </RelativeLayout>
    <View
        android:layout_height="0.8dp"
        android:layout_width="match_parent"
        android:background="#e8e8e8">
    </View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/edit"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@color/white">
        <include
            layout="@layout/core_line"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/ripple_bg_while"
            android:padding="10dp"
            android:onClick="toPickKsrq">
            <TextView
                android:id="@+id/ksrq_bt"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="留宿开始时间"
                android:textColor="#212121"
                android:textSize="?attr/textSize15">
            </TextView>
            <TextView
                android:id="@+id/ksrq_pick"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textColor="#212121"
                android:textSize="?attr/textSize14"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="必填">
            </TextView>
            <ImageView
                android:src="@mipmap/arrow_icon_xg"
                android:layout_width="?attr/image8"
                android:layout_height="?attr/image13"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <include
            layout="@layout/core_line_padding" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/ripple_bg_while"
            android:padding="10dp"
            android:onClick="toPickJsrq">
            <TextView
                android:id="@+id/jsrq_bt"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="留宿结束时间"
                android:textColor="#212121"
                android:textSize="?attr/textSize15">
            </TextView>
            <TextView
                android:id="@+id/jsrq_pick"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textColor="#212121"
                android:textSize="?attr/textSize14"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="必填">
            </TextView>
            <ImageView
                android:src="@mipmap/arrow_icon_xg"
                android:layout_width="?attr/image8"
                android:layout_height="?attr/image13"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <include
            layout="@layout/core_line"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/xiaojia"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone">
        <include
            layout="@layout/core_line"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/ripple_bg_while"
            android:padding="10dp"
            android:onClick="toPickXjrq">
            <TextView
                android:id="@+id/xjrq_bt"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="销假日期"
                android:textColor="#212121"
                android:textSize="?attr/textSize15">
            </TextView>
            <TextView
                android:id="@+id/xjrq_pick"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textColor="#212121"
                android:textSize="?attr/textSize14"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="必填">
            </TextView>
            <ImageView
                android:src="@mipmap/arrow_icon_xg"
                android:layout_width="?attr/image8"
                android:layout_height="?attr/image13"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <include
            layout="@layout/core_line"/>
    </LinearLayout>
    </LinearLayout>
        <com.dk.mp.core.widget.ErrorLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/error_layout"
            android:gravity="center_horizontal"/>
    </RelativeLayout>
</LinearLayout>