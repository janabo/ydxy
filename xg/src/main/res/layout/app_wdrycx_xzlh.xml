<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#eff0f4">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/back"
            style="@style/but_back"
            android:layout_width="70dip"
            android:layout_height="48dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/title"
            style="@style/title_txt"
            android:paddingLeft="70dip"
            android:paddingRight="70dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <com.dk.mp.core.widget.ErrorLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/error_layout"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/select_date"
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_e5"
        android:gravity="center_vertical">
        <ImageView
            android:layout_height="17dp"
            android:layout_width="17dp"
            android:src="@mipmap/sj_icon"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:textColor="#646464"
            android:text="选择日期"
            android:layout_marginLeft="7dp"/>
        <TextView
            android:id="@+id/mtime"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#212121"
            android:textSize="17sp"
            android:gravity="right"
            android:hint="必选"/>
        <ImageView
            android:layout_height="9dp"
            android:layout_width="13dp"
            android:src="@mipmap/jt_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border_e5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center_vertical">
                <ImageView
                    android:layout_height="15dp"
                    android:layout_width="15dp"
                    android:src="@mipmap/ss_icon"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#212121"
                    android:text="选择宿舍楼"
                    android:layout_marginLeft="7dp"
                    android:textSize="17sp"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ok"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:elevation="2dp"
        android:background="@color/rcap_gray"
        android:gravity="center">

        <TextView
            android:id="@+id/ok_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>


</LinearLayout>
