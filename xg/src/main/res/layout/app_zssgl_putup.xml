<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_search"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4f4f4"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_alignParentTop="true"
        android:background="#ededed"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:elevation="3dp">
        <TextView
            android:id="@+id/back"
            android:textColor="@color/colorPrimary"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip" />

        <TextView
            android:id="@+id/title"
            android:paddingLeft="70dip"
            android:paddingRight="70dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#212121"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ok"
            android:textColor="@color/colorPrimary50"
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"/>
    </RelativeLayout>
    <View
        android:layout_height="0.8dp"
        android:layout_width="match_parent"
        android:background="#e8e8e8">
    </View>
    <LinearLayout
        android:id="@+id/xiaojia"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@color/white">
        <include
            layout="@layout/core_line"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/ripple_bg_while"
            android:padding="10dp"
            android:onClick="toPickDxrzrq">
            <TextView
                android:id="@+id/xjrq_bt"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="到校入住日期"
                android:textColor="#212121"
                android:textSize="?attr/textSize15">
            </TextView>
            <TextView
                android:id="@+id/xjrq_pick"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textColor="#212121"
                android:textSize="?attr/textSize14"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="必填">
            </TextView>
            <ImageView
                android:src="@mipmap/arrow_icon_xg"
                android:layout_width="?attr/image8"
                android:layout_height="?attr/image13"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <include
            layout="@layout/core_line"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/linecolor"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/bz"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:minHeight="100dp"
        android:maxLength="200"
        android:hint="备注(200字以内，选填)"
        android:gravity="top"
        android:textSize="?attr/textSize14"/>
    <include
        layout="@layout/core_line"/>


</LinearLayout>