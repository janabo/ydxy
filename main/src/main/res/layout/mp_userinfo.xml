<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >
    <include
        android:id="@+id/layout_top"
        layout="@layout/core_title_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        android:orientation="vertical"
        android:layout_below="@+id/layout_top">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="10dp" >
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dip"
            android:background="#c9c9c9"/>
        <RelativeLayout
            android:layout_height="?attr/image60"
            android:layout_width="match_parent"
            android:paddingLeft="10dip"
            android:paddingRight="10dip">
            <TextView
                android:id="@+id/tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#212121"
                android:textSize="?attr/textSize14"
                android:text="头像" />
            <!--<com.dk.mp.core.view.DraweeView-->
                <!--android:transitionName="personphoto"-->
                <!--android:id="@+id/photo"-->
                <!--android:layout_width="?attr/image40"-->
                <!--android:layout_height="?attr/image40"-->
                <!--fresco:fadeDuration="300"-->
                <!--fresco:actualImageScaleType="centerCrop"-->
                <!--fresco:placeholderImage="@mipmap/photo"-->
                <!--fresco:placeholderImageScaleType="centerCrop"-->
                <!--fresco:failureImage="@mipmap/photo"-->
                <!--fresco:failureImageScaleType="centerCrop"-->
                <!--fresco:retryImage="@mipmap/photo"-->
                <!--fresco:retryImageScaleType="centerCrop"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"/>-->

            <ImageView
            android:transitionName="personphoto"
            android:id="@+id/photo"
            android:layout_width="?attr/image40"
            android:layout_height="?attr/image40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/photo"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.8dip"
                android:background="#c9c9c9"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="?attr/image44"
            android:layout_width="match_parent"
            android:paddingLeft="10dip"
            android:paddingRight="10dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="姓名"
                android:textColor="#212121"
                android:textSize="?attr/textSize14" />
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#646464"
                android:textSize="?attr/textSize14" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.8dip"
                android:background="#c9c9c9"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="?attr/image44"
            android:layout_width="match_parent"
            android:paddingLeft="10dip"
            android:paddingRight="10dip">
            <TextView
                android:id="@+id/xhorgh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="学号"
                android:textColor="#212121"
                android:textSize="?attr/textSize14" />
            <TextView
                android:id="@+id/xh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#646464"
                android:textSize="?attr/textSize14" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.8dip"
                android:background="#c9c9c9"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="?attr/image44"
            android:layout_width="match_parent"
            android:paddingLeft="10dip"
            android:paddingRight="10dip">
            <TextView
                android:id="@+id/yxorbm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="院系"
                android:textColor="#212121"
                android:textSize="?attr/textSize14" />
            <TextView
                android:id="@+id/depart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#646464"
                android:textSize="?attr/textSize14" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dip"
            android:background="#c9c9c9"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="?attr/image44"
        android:layout_marginTop="30dip"
        android:orientation="vertical" >
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:background="#c9c9c9" />
        <Button
            android:id="@+id/loginout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_bg_while"
            android:text="退出登录"
            android:textColor="#646464"
            android:textSize="?attr/textSize14" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:background="#c9c9c9" />
    </LinearLayout>
</RelativeLayout>