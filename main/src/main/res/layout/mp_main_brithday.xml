<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:onClick="tomessinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@null">

    <ImageButton
        android:id="@+id/close"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@mipmap/closebd"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_gravity="right|top"/>

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_gravity="bottom|center">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="350dp"
            android:src="@mipmap/brithday_bg" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            fresco:fadeDuration="300"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@mipmap/man"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:failureImage="@color/white"
            fresco:failureImageScaleType="centerInside"
            fresco:overlayImage="@color/transparent"
            fresco:pressedStateOverlayImage="@color/transparent"
            fresco:roundAsCircle="true"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:src="@mipmap/mz"
            android:layout_gravity="right"
            android:layout_marginRight="80dp"
            android:layout_marginTop="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textname"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_marginTop="115dp"/>

    </FrameLayout>




</LinearLayout>
