                    <!--<TextView-->
                        <!--android:id="@+id/version_new"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="当前版本:1.0"-->
                        <!--android:textColor="#9c9c9c"-->
