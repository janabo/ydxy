<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/container">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dip">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="?attr/image34"
            android:layout_height="?attr/image34"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dip"
            android:gravity="center"
            android:paddingBottom="15dip"
            android:text=""
            android:textColor="#212121"
            android:textSize="?attr/textSize12"/>

    </LinearLayout>
    <ImageButton android:id="@+id/gragItemViewDelete"
        android:layout_width="?attr/image22"
        android:layout_height="?attr/image22"
        android:layout_gravity="right"
        android:src="@mipmap/minus_alt"
        android:background="@null"
        android:scaleType="fitXY"
        android:visibility="gone"/>
    <Button
        android:id="@+id/deleteButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="@null"
        android:visibility="gone"/>
</FrameLayout>