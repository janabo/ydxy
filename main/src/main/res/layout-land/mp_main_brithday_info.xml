<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@null">

    <include layout="@layout/core_title_back"></include>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="45dp">

        <ImageView
            android:layout_width="match_parent"
            android:src="@mipmap/brithday_bg"
            android:layout_height="match_parent"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            fresco:fadeDuration="300"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@color/white"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:failureImage="@color/white"
            fresco:failureImageScaleType="centerInside"
            fresco:overlayImage="@color/transparent"
            fresco:pressedStateOverlayImage="@color/transparent"
            fresco:roundAsCircle="true"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:src="@mipmap/mz"
            android:layout_gravity="right"
            android:layout_marginRight="110dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textname"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_marginTop="115dp"
            android:text="上岛咖啡"/>

    </FrameLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="谢谢"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="45dp"
        android:background="#FE7F7F"/>

</LinearLayout>
