<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppThemeSchedule" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
    </style>

    <style name="AppThemeSchedule.NoTitle" parent="AppThemeSchedule">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item><!--弹出框字体颜色-->
    </style>

    <style name="AppThemeSchedule.NoTitle.overlay">
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="Theme.AppCompat.Light.Dialog.Alert.Self"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="detail_title">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">?attr/textSize15</item>
        <item name="android:paddingLeft">10dip</item>
    </style>

    <style name="detail_value">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">?attr/textSize15</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="CalendarTheme">
        <item name="calendarViewStyle">@style/CalendarStyle</item>
    </style>

    <style name="CalendarStyle">
        <item name="android:orientation">vertical</item>
    </style>
</resources>
