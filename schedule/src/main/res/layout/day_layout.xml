<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <LinearLayout
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:id="@+id/tvDayViewLin"
            android:layout_centerHorizontal="true"
            android:gravity="center">
            <com.dk.mp.schedule.widget.DayView
                android:id="@+id/tvDayView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_calendar"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/view_point"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvDayViewLin"
            android:background="@drawable/bg_calendar_point_blue"
            android:visibility="invisible"
            android:layout_marginTop="5dp"/>

        <com.dk.mp.schedule.widget.DayView
            android:id="@+id/tvChina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDayViewLin"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_calendar"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_day_type"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_day_type_red"
            android:gravity="center"
            android:text="ç­"
            android:textColor="@color/cal_color_white"
            android:textSize="8sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>