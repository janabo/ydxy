<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
                 <shape>
            <gradient android:angle="270" android:endColor="#98bfe9" android:centerColor="#80a8d9" android:startColor="#98bfe9" />
            <corners android:radius="6dip" />
            <stroke android:width="1.0dip" android:color="#a3a5a7" />
            </shape>  
        
    </item>
    <item >
         <shape>
            <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
            <corners android:radius="6dip" />
            <stroke android:width="1.0dip" android:color="#a3a5a7" />
            </shape>     
        
    </item>
</selector>

