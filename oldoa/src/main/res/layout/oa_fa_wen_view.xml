<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:background="#f7f7f7"
    android:orientation="vertical" >

    <include
        android:id="@+id/top"
        layout="@layout/core_title_back" />

	<com.dk.mp.core.widget.ErrorLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:gravity="center_horizontal"
		android:id="@+id/error_layout">
	</com.dk.mp.core.widget.ErrorLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/next"
        android:layout_below="@+id/top" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <include layout="@layout/oa_detail_top" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="@color/white"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="fill_parent"
                	android:layout_height="wrap_content"
                	android:orientation="horizontal">

	                <TextView
	                    android:id="@+id/ngr_title"
	                    style="@style/oa_content"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="5dip"
	                    android:text="拟稿人:" />
	
	                <TextView
	                    android:id="@+id/ngr_txt"
	                    style="@style/oa_content_txt"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dip"
	                    android:layout_marginTop="5dip"/>
	                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="fill_parent"
                	android:layout_height="wrap_content"
                	android:orientation="horizontal">

	                <TextView
	                    android:id="@+id/file_type_title"
	                    style="@style/oa_content"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="5dip"
	                    android:text="文件类别:" />
	
	                <TextView
	                    android:id="@+id/file_type_txt"
	                    style="@style/oa_content_txt"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dip"
	                    android:layout_marginTop="5dip"/>
	                </LinearLayout>
	                <LinearLayout
	                    android:layout_width="fill_parent"
	                	android:layout_height="wrap_content"
                		android:orientation="horizontal">
		                <TextView
		                    android:id="@+id/jg_wz_title"
		                    style="@style/oa_content"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginTop="5dip"
		                    android:text="机关代字:" />
		
		                <TextView
		                    android:id="@+id/jg_wz_txt"
		                    style="@style/oa_content_txt"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginLeft="5dip"
		                    android:layout_marginTop="5dip"/>
		             </LinearLayout>
		             <LinearLayout
		                    android:layout_width="fill_parent"
		                	android:layout_height="wrap_content"
		                	android:orientation="horizontal">
		                <TextView
		                    android:id="@+id/fw_num_title"
		                    style="@style/oa_content"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginTop="5dip"
		                    android:text="发文编号:" />
		
		                <TextView
		                    android:id="@+id/fw_num_txt"
		                    style="@style/oa_content_txt"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginLeft="5dip"
		                    android:layout_marginTop="5dip"/>
		                </LinearLayout>
		           <LinearLayout
	                    android:layout_width="fill_parent"
	                	android:layout_height="wrap_content"
	                	android:orientation="horizontal">
		
		                <TextView
		                    android:id="@+id/jinj_cd_title"
		                    style="@style/oa_content"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginTop="5dip"
		                    android:text="紧急程度:" />
		
		                <TextView
		                    android:id="@+id/jinj_cd_txt"
		                    style="@style/oa_content_txt"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginLeft="5dip"
		                    android:layout_marginTop="5dip" />
		             </LinearLayout>

                <RelativeLayout
                    android:id="@+id/detail_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="5dip" >

                    <TextView
                        android:id="@+id/zheng_wen_title"
                        style="@style/oa_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="5dip"
                        android:gravity="center"
                        android:text="正文:" />

                    <TextView
                        android:id="@+id/zheng_wen_txt"
                        style="@style/oa_content_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:layout_toRightOf="@+id/zheng_wen_title"
                        android:background="@drawable/zhengwen_btn"
                        android:gravity="center"
                        android:text="查看详情"
                        android:textColor="#0376c6"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/zheng_wen_no_txt"
                        style="@style/oa_content_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_toRightOf="@+id/zheng_wen_title"
                        android:gravity="center"
                        android:text="无"
                        android:visibility="gone" />

                    <ProgressBar
                        android:id="@+id/zhengwen_detail_progress"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="50dip"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <include layout="@layout/oa_detail_bottom" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/next"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        layout="@layout/oa_detail_next" />

</RelativeLayout>